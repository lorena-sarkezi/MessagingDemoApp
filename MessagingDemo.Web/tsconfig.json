{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "outFile": "wwwroot/js/site.js",
    "lib": [ "es2015", "dom" ],
    "module": "AMD",
    "moduleResolution": "Node"
