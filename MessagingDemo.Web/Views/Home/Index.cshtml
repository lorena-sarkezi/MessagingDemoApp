@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-6" style="margin: 0 auto">
        <div class="card">
            <div class="card-header">
                Demo
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <form id="form-customer">
                            <div class="row">
                                <div class="col-6 text-right">
                                    First and last name
                                </div>
                                <div class="col-6 form-group">
                                    <input type="text" class="form-control" id="cust-name" placeholder="Enter first and last name..." required/>
                                    <div class="invalid-feedback"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6 text-right">
                                    Phone number
                                </div>
                                <div class="col-6 form-group">
                                    <input type="number" class="form-control" id="cust-phone" placeholder="Enter phone number..." required/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                </div>
                                <div class="col-6 ">
                                    <button type="submit" class="btn btn-primary">Add a recepient</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <br />
                
                <form id="form-message">
                    <div class="row">
                        <div class="col">
                            <table class="table" id="table" action="/api/demo/message" method="post">
                                <thead>
                                    <tr>
                                        <th>Send</th>
                                        <th>First and last name</th>
                                        <th>Phone number</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p>SMS message (max 160 characters, <span id="span-char-cnt"></span> chars left)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <textarea class="form-control" onkeyup="MessagingDemo.checkChars(this)" id="msg-text" required maxlength="160"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary float-left">Send</button>
                        </div>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</div>

<script>
    ApDemo.initialize();
</script>
